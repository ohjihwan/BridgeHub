# 1) RTC 서버 포트
RTC_PORT=7600

# 2) Spring 백엔드
API_URL=https://thebridgehub.org/api         # 기존 REACT_APP_API_URL → server 측용
REACT_APP_API_URL=https://thebridgehub.org/api
REACT_APP_SIGNALING_URL=https://thebridgehub.org/rtc

# 3) JWT 검증용 비밀키
JWT_SECRET=??????????????????

# 4) SSL (필요 시 server.mjs 에서 HTTPS 서버로 바꿀 때 사용)
SSL_KEY_PATH=/etc/letsencrypt/live/thebridgehub.org/privkey.pem
SSL_CERT_PATH=/etc/letsencrypt/live/thebridgehub.org/fullchain.pem

# 5) Mediasoup 설정
MEDIASOUP_MIN_PORT=40000
MEDIASOUP_MAX_PORT=49999
MEDIASOUP_LOG_LEVEL=warn
LISTEN_IP=0.0.0.0
ANNOUNCED_IP=54.252.32.250

# 6) STUN/TURN 서버
STUN_HOST=thebridgehub.org
STUN_PORT=3478
TURN_HOST=turn.thebridgehub.org            # 기존 TURN_URL 대신 호스트/포트 분리
TURN_PORT=3478
TURN_USER=bridgehub                         # TURN_USERNAME_PREFIX 옮겨옴
TURN_SECRET=bridgehub_secret_123
TURN_REALM=thebridgehub.org

# 7) 방 최대 인원
MAX_PEERS_PER_ROOM=10

# 8) 노드 환경
NODE_ENV=development
